{
	"name": "@clippium/preset-config",
	"version": "0.0.4",
	"description": "Make Clippium take flags and commands from a configuration file",
	"keywords": [
		"cli",
		"clippium",
		"config",
		"pigeonposse",
		"pp",
		"preset"
	],
	"homepage": "https://clippium.pigeonposse.com/guide/preset/config",
	"bugs": {
		"url": "https://github.com/pigeonposse/clippium/issues",
		"email": "dev@pigeonposse.com"
	},
	"repository": {
		"type": "https",
		"url": "https://github.com/pigeonposse/clippium/",
		"directory": "packages/preset/config"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/contribute"
	},
	"license": "MIT",
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"import": "./dist/schema.mjs"
		}
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm build:lib && pnpm build:schema",
		"build:lib": "unbuild",
		"build:schema": "pnpx ts-json-schema-generator -p ./src/index.ts -t ConfigFileData --unstable -o ./dist/schema/config-file.json",
		"dev": "pnpx tsx examples/project/index.ts",
		"dev:schema": "pnpm --dir examples/project schema"
	},
	"dependencies": {
		"js-yaml": "4.1.0",
		"smol-toml": "1.4.1"
	},
	"devDependencies": {
		"@clippium/_config": "workspace:*",
		"@types/js-yaml": "4.0.9",
		"@types/json-schema": "7.0.15",
		"clippium": "workspace:*"
	},
	"peerDependencies": {
		"clippium": "workspace:*"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
